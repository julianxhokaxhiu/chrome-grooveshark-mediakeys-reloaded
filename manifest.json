{
    "manifest_version": 2,
    "name": "Grooveshark Mediakeys Reloaded",
    "version": "0.9",
    "description": "Enable the use of MediaKeys for Grooveshark",
    "permissions": [
        "*://*.grooveshark.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "commands": {
        "PLAY-PAUSE-MK": {
            "suggested_key": {
                "default": "MediaPlayPause",
                "windows": "VK_MEDIA_PLAY_PAUSE"
            },
            "description": "Play/Pause Key",
            "global": true
        },
        "PREV-MK": {
            "suggested_key": {
                "default": "MediaPrevTrack",
                "windows": "VK_MEDIA_PREV_TRACK"
            },
            "description": "Prev Key",
            "global": true
        },
        "NEXT-MK": {
            "suggested_key": {
                "default": "MediaNextTrack",
                "windows": "VK_MEDIA_NEXT_TRACK"
            },
            "description": "Next Key",
            "global": true
        }
    },
    "icons": {
        "16": "img/icon_16.png",
        "128": "img/icon_128.png"
    },
    "content_scripts": [{
        "matches": [
            "*://*.grooveshark.com/*"
        ],
        "js": [
            "js/app.js"
        ],
        "run_at": "document_idle"
    }]
}
